%compile source files
{ './src/*', [ debug_info, {pa,".."},
	{ i, "./include" },
	{ outdir, "./ebin" }
]}.

{ './src/*/*', [ debug_info, {pa,".."},
	{ i, "./include" },
	{ outdir, "./ebin" }
]}.

{ './src/*/*/*', [ debug_info, {pa,".."},
	{ i, "./include" },
	{ outdir, "./ebin" }
]}.

% Compile the test files
{ './test/src/*', [ debug_info, {pa,".."},
	{ i, "./include" },
	{ outdir, "./test/ebin" }
]}.

{ './test/src/*/*', [ debug_info, {pa,".."},
	{ i, "./include" },
	{ outdir, "./test/ebin" }
]}.

{ './test/src/*/*/*', [ debug_info, {pa,".."},
	{ i, "./include" },
	{ outdir, "./test/ebin" }
]}.
